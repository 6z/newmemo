<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="46dp">

    <a6z.com.newmemo.RoundImageView
        android:id="@+id/id_logImage"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="14dp"
        android:src="@drawable/ic_menu_camera"
        app:border_color="#949494"
        app:border_width="1dp" />

    <TextView
        android:id="@+id/id_name"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/text_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_toRightOf="@+id/id_logImage"
        android:singleLine="true"
        android:text="看我表演"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/splitter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/text_margin"
        android:layout_toRightOf="@id/id_name"
        android:text=":"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/id_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/text_margin"
        android:layout_toRightOf="@id/splitter"
        android:singleLine="true"
        android:text="world"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <ImageButton
        android:id="@+id/edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_toLeftOf="@+id/remove_button"
        android:background="#00000000"
        android:src="@drawable/ic_mode_edit_black" />

    <ImageButton
        android:id="@+id/remove_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:background="#00000000"
        android:src="@drawable/ic_delete_forever_black" />
</RelativeLayout>