<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <a6z.com.newmemo.RoundImageView
            android:layout_width="@dimen/list_image_width"
            android:layout_height="@dimen/list_image_height"
            android:layout_gravity="center"
            android:contentDescription="@string/title_pic"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_menu_gallery"
            app:border_color="#949494"
            app:border_width="1dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/id_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_between_text"
                android:layout_marginEnd="@dimen/margin_between_text"
                android:layout_marginRight="@dimen/margin_between_text"
                android:layout_marginTop="@dimen/margin_text_from_container"
                android:singleLine="true"
                android:text="你的微笑"
                android:textAppearance="@style/ListItemTitle" />

            <TextView
                android:id="@+id/id_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_between_text"
                android:singleLine="true"
                android:text="最美的信号"
                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/id_update_timestamp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_text_from_container"
        android:text="2016-05-20 15:30:22"
        android:textAlignment="viewEnd"
        android:textAppearance="@style/TextAppearance.AppCompat.Small" />

</LinearLayout>